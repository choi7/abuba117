<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.joyblock.abuba.bus.A0_bus">

<ListView
    android:id="@+id/listview"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@id/linear"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#FFFFFF"
    />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="43.5dp"
        android:orientation="horizontal"
        android:background="#E73828"
        app:layout_constraintBottom_toTopOf="@+id/PageNavigationView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/textview_red"
            android:layout_width="wrap_content"
            android:layout_height="43.5dp"
            android:layout_weight="1"
            android:background="#E73828"
            android:fontFamily="@font/nanumsquarebold"
            android:gravity="right|center|end"
            android:text="총 탑승 인원 "
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/PageNavigationView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_red2"
            android:layout_width="wrap_content"
            android:layout_height="43.5dp"
            android:layout_weight="1"
            android:background="#E73828"
            android:fontFamily="@font/nanumsquarebold"
            android:gravity="right|center|start"
            android:text="10명"
            android:textColor="#FFFF00"
            app:layout_constraintBottom_toTopOf="@+id/PageNavigationView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <com.joyblock.abuba.bottomtabbar
        android:id="@+id/PageNavigationView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.joyblock.abuba.bottomtabbar>

</android.support.constraint.ConstraintLayout>
