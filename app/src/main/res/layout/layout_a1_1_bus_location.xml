<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17.5dp"
        android:layout_marginStart="17.5dp"
        android:layout_marginTop="17.5dp"
        android:onClick="clickPresentLocation"
        app:srcCompat="@drawable/map_present_location" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:background="#000000"
        android:orientation="vertical"
        android:id="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView158"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/nanumsquarebold"
                android:gravity="bottom"
                android:paddingBottom="2dp"
                android:paddingLeft="24dp"
                android:paddingStart="24dp"
                android:text="곰돌이 1호차"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView160"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="2dp"
                android:paddingEnd="24dp"
                android:paddingRight="24dp"
                android:text="도착예정시간 23분"
                android:textColor="#ffff00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarebold"
                    android:paddingLeft="24dp"
                    android:paddingStart="24dp"
                    android:text="인솔교사 : 김솜솜"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView159"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarebold"
                    android:paddingLeft="24dp"
                    android:paddingStart="24dp"
                    android:text="기사 : 이원일"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView157"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/nanumsquarebold"
                    android:paddingLeft="24dp"
                    android:paddingStart="24dp"
                    android:text="차량번호 : 58아 1282"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="36.5dp"
                android:layout_height="36.5dp"
                android:layout_gravity="right|center_vertical|end"
                android:layout_weight="1"
                android:onClick="clickCall"
                app:srcCompat="@drawable/boarding_list_tel" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>