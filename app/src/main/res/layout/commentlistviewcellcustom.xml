<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/commentProfileImage"
        android:layout_width="17.5dp"
        android:layout_height="18.5dp"
        android:layout_marginStart="14.5dp"
        android:layout_marginTop="8.5dp"
        android:fontFamily="@font/nanumsquareregular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/commentNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="14.5dp"
        android:fontFamily="@font/nanumsquarebold"
        android:text="김원장"
        android:textSize="8.75dp"
        app:layout_constraintStart_toEndOf="@+id/commentProfileImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/commentContentText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14.5dp"
        android:layout_marginTop="5.25dp"
        android:fontFamily="@font/nanumsquareregular"
        android:text="네 알겟습니다"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/commentProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/commentProfileImage"
        android:layout_marginRight="14.5dp" />

    <TextView
        android:id="@+id/commentTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4.25dp"
        android:fontFamily="@font/nanumsquareregular"
        android:text="2018.01.01 오후 11:00"
        android:textColor="#B4B4B5"
        android:textSize="6.25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/commentProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/commentContentText" />

    <TextView
        android:id="@+id/textView83"
        android:layout_width="wrap_content"
        android:layout_height="62.5dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>